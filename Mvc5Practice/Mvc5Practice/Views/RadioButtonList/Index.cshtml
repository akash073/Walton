            PropertyInfo[] properties = myClassType.GetProperties();

            foreach (PropertyInfo property in properties)
            {

                //Console.WriteLine("Name: " + property.Name + ", Value: " + property.GetValue(paymentItem, null));

                <input type="radio" name="group2" value="@property.Name"> @property.GetValue(paymentItem, null)
            }
            <br>
        }




